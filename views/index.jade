extends layout

block content
  
  header
    h1
      img(id="logo",src="/images/logo.png")
  
  div(id="forms")
    form(action='/edit', method='post')
      label(for='goal')
        input(id='goal',type='text',value='',placeholder='Goal value',name='goal')
        input(type='submit',value='√',class="btn")  
  
    form(action='/addmoney', method='post')
      label(for='coins') 
        input(id='coins',type='text',value='',placeholder='Deposit value',name='coins')
        input(type='submit',value='√',class="btn")
  

  dl(id="status")
      
    div(id="amount")
      dt
        h2|Current amount
      dd|#{gris.amount}
  
    div(id="percent")
      dt
        h2|% achieved <!--of #{gris.goal}-->
      dd|#{gris.amount/gris.goal*100}
  
    
  footer
    img(src="/images/bear.png")
    p|Savings for the future &trade;
      
    a(href="/reset")|reset
    
  
    
    
  